<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.skydoves.doublelift.DoubleLiftLayout
        android:id="@+id/lift1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:doubleLift_animation="bounce"
        app:doubleLift_autoExpand="false"
        app:doubleLift_cornerRadius="4dp"
        app:doubleLift_foldedHeight="10dp"
        app:doubleLift_foldedWidth="50dp"
        app:doubleLift_horizontalDuration="400"
        app:doubleLift_startOrientation="horizontal"
        app:doubleLift_verticalDuration="300">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/transparent" />

    </com.skydoves.doublelift.DoubleLiftLayout>

    <com.skydoves.doublelift.DoubleLiftLayout
        android:id="@+id/lift2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:doubleLift_animation="bounce"
        app:doubleLift_autoExpand="false"
        app:doubleLift_cornerRadius="4dp"
        app:doubleLift_foldedHeight="10dp"
        app:doubleLift_foldedWidth="50dp"
        app:doubleLift_horizontalDuration="400"
        app:doubleLift_startOrientation="horizontal"
        app:doubleLift_verticalDuration="300">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/transparent" />

    </com.skydoves.doublelift.DoubleLiftLayout>

    <com.skydoves.doublelift.DoubleLiftLayout
        android:id="@+id/lift3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:doubleLift_animation="bounce"
        app:doubleLift_autoExpand="false"
        app:doubleLift_cornerRadius="4dp"
        app:doubleLift_foldedHeight="10dp"
        app:doubleLift_foldedWidth="50dp"
        app:doubleLift_horizontalDuration="400"
        app:doubleLift_startOrientation="horizontal"
        app:doubleLift_verticalDuration="300">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/transparent" />

    </com.skydoves.doublelift.DoubleLiftLayout>

    <com.skydoves.doublelift.DoubleLiftLayout
        android:id="@+id/lift4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:doubleLift_animation="bounce"
        app:doubleLift_autoExpand="false"
        app:doubleLift_cornerRadius="4dp"
        app:doubleLift_foldedHeight="10dp"
        app:doubleLift_foldedWidth="50dp"
        app:doubleLift_horizontalDuration="400"
        app:doubleLift_startOrientation="horizontal"
        app:doubleLift_verticalDuration="300">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/transparent" />

    </com.skydoves.doublelift.DoubleLiftLayout>

    <FrameLayout
        android:background="@drawable/shape"
        android:id="@+id/framelayout"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get link      "
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Link     "
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set File      "
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Memo  "
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>